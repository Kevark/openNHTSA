citHeader("To cite package 'openNHSTA' in publications use:")

 year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
 vers <- paste("R package version", meta$Version)

 citEntry(entry="Manual",
		  title = "openNHSTA: R interface to the USDOT NHTSA API",
		  author = personList(as.person("Christopher Peters")),
		  year = year,
		  note = vers,
		  textVersion =
		  paste("Christopher Peters (",
				year,
				"). openNHSTA: R interface to the USDOT NHTSA API. ",
				vers, ".", sep=""))
